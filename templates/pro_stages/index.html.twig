{# /template/pro_stages/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
	Page d'accueil ProStages
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block header %}
	<div class="container-fluid">		
		<div class="carousel slide" id="carousel-6385">
            <ol class="carousel-indicators">
				<li data-slide-to="0" data-target="#carousel-6385" class="active"></li>
                <li data-slide-to="1" data-target="#carousel-6385"></li>
                <li data-slide-to="2" data-target="#carousel-6385"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
					<img class="d-block w-100" alt="Carousel Bootstrap First" src="{{asset('/images/slider1.jpg')}}"/>
					<div class="carousel-caption">
                    <h1>
                      ProStages
                    </h1>
                    <h2>
                      Bienvenue sur ProStages, le site n°1 de recherche de stage
                    </h2>
                  </div>
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" alt="Carousel Bootstrap Second" src="{{asset('/images/slider3.jpg')}}"/>
                  <div class="carousel-caption">
					<h1>
                      ProStages
                    </h1>
                    <h2>
                      Vous recherchez un stage dans une entreprise en particulier ?
                    </h2>
                  </div>
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" alt="Carousel Bootstrap Third" src="{{asset('/images/slider2.jpg')}}"/>
                  <div class="carousel-caption">
					<h1>
                      ProStages
                    </h1>
                    <h2>
                      Vous recherchez un stage pour une formation précise ?
                    </h2>				
                  </div>
                </div>
              </div>
            <a class="carousel-control-prev" href="#carousel-6385" data-slide="prev">
				<span class="carousel-control-prev-icon"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carousel-6385" data-slide="next">
				<span class="carousel-control-next-icon"></span>
				<span class="sr-only">Next</span>
			</a>
        </div>
	</div>
{% endblock %}
		
{% block menu %}
{% endblock %}

{% block contenu %}
	<div class="container-fluid" style="padding-top: 50px">
			<div class="row">
				<div class="col-12">
					<div class="panel panel-default">
						<div class="panel-heading"><h4>Stages actuellement proposés</h4></div>
						<ul class="list-group">
							{% for stageCourant in stages %}
								<li class="list-group-item">
									<a href="{{ path('ProStages_Stages', {'id':stageCourant.id}) }}">
										{{stageCourant.titre}} - {{stageCourant.entreprise.nom}}
									</a>
								</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
		</div>
{% endblock %}
		
{% block footer %}
{% endblock %}
		
{% block javascript %}
{% endblock %}

