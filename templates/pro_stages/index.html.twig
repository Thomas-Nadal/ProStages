{% endblock %}

{% block header %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
					<h1  align="center">ProStages</h1>
					<h2  align="center">Bienvenu sur ProStages</h2>
			</div>
		</div>
	</div>
{% endblock %}
		
{% block menu %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12  col-sm-12 col-xs-12">
				<!--BARRE DE NAVIGATION-->
				<nav class="navbar navbar-expand-lg navbar-light bg-light">
				  <a class="navbar-brand" href="/">Trier les stages par : </a>
				  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				  </button>
				  <div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
					  <li class="nav-item">
						<a class="nav-link" href="/formations">Formation</a>
					  </li>
					  <li class="nav-item">
						<a class="nav-link" href="/entreprises">Entreprise</a>
					</ul>
				  </div>
				</nav>
			</div>
		</div>
	</div>
{% endblock %}

{% block contenu %}
	<div class="container-fluid"  style="padding-top: 50px">
		<div class="row">
			<div class="col-10 offset-1">
				<table class="table table-striped">
				  <thead>
					<tr>
					  <th scope="col"></th>
					  <th scope="col" style="text-align:center">Titre du stage</th>
					  <th scope="col" style="text-align:center">Entreprise</th>
					</tr>
				  </thead>
				  <tbody>
					<tr>
					  <th scope="row">1</th>
					  <td style="text-align:center">Mark</td>
					  <td style="text-align:center">Otto</td>
					</tr>
					<tr>
					  <th scope="row">2</th>
					  <td style="text-align:center">MarkMarkMarkMarkMarkMark</td>
					  <td style="text-align:center">OttoMarkMarkMarkMark</td>
					</tr>
					<tr>
					  <th scope="row">3</th>
					  <td style="text-align:center">MarkMarkMark</td>
					  <td style="text-align:center">OttoMarkMark Mark</td>
					</tr>
				  </tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
		
{% block footer %}
{% endblock %}
		
{% block javascript %}
	<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
