{# /template/base.html.twig #}

<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>{% block title %}Welcome !{% endblock %}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		
		<!-- BLOCK DES FEUILLES DE STYLE -->
		<link rel="stylesheet" href="/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
		{% block stylesheets %}
		{% endblock %}
		
	</head>
	
	<body>
		<!-- BLOCK DU HEADER -->		
		{% block header %}
		{% endblock %}
		
		<!-- BLOCK MENU -->
		{% block menu %}
		{% endblock %}
		
		<!-- Barre de navigation -->
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12  col-sm-12 col-xs-12">
					<!--BARRE DE NAVIGATION-->
					<nav class="navbar navbar-expand-lg navbar-light bg-light">
					  <a class="navbar-brand" href="/">Trier les stages par : </a>
					  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					  </button>
					  <div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav">
						  <li class="nav-item">
							<a class="nav-link" href="/formations">Formation</a>
						  </li>
						  <li class="nav-item">
							<a class="nav-link" href="/entreprises">Entreprise</a>
						  </li>
						  <li class="nav-item">
							<a class="nav-link" href="/ajouter_entreprise">Ajouter une Entreprise</a>
						  </li>
						  <li class="nav-item">
							<a class="nav-link" href="/ajouter_stage">Ajouter un Stage</a>
						  </li>
						</ul>

						{% if is_granted('ROLE_USER') %}
							<ul class="navbar-nav ml-md-auto">
						 		<li class="nav-item">
									<a class="nav-link" href="{{path('app_logout')}}">DÃ©connexion</a>
						 		 </li>
							</ul>
						{% else %}
							<ul class="navbar-nav ml-md-auto">
						 		<li class="nav-item">
									<a class="nav-link" href="{{path('app_login')}}">Connexion</a>
						 		 </li>
							</ul>
						{% endif %}



					  </div>
					</nav>
				</div>
			</div>
		</div>
		
		<!-- BLOCK CONTENU -->
		{% block contenu %}
		{% endblock %}
		
		<!-- BLOCK PIED DE PAGE -->
		{% block footer %}
		{% endblock %}
		
		<!-- BLOCK JAVA SCRIPT -->
		
		<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		<script src="/js/bootstrap.min.js"></script>
		
		{% block javascript %}
		{% endblock %}
		
	</body>
</html>